<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sakebook.android.sample.notificationanimationsample.MainActivity">

    <Button
        android:id="@+id/button_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="normal"/>
    <Button
        android:id="@+id/button_custom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom_content"/>
    <Button
        android:id="@+id/button_custom_headsup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom_headsup"/>
    <Button
        android:id="@+id/button_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="media"/>
    <Button
        android:id="@+id/button_decorate_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="decorate_media"/>
    <Button
        android:id="@+id/button_media_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="media_as_ service"/>

</LinearLayout>
